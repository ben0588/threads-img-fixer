{
  "manifest_version": 3,
  "name": "Threads Image Fixer",
  "version": "1.1.0",
  "description": "自動修復 Threads 與 Instagram 圖片無法顯示的問題 (Fix broken images on Threads)。",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "*://*.threads.net/*",
    "*://*.threads.com/*", 
    "*://*.instagram.com/*",
    "*://*.facebook.com/*",
    "*://*.fbcdn.net/*",
    "*://*.fna.fbcdn.net/*",
    "*://*.cdninstagram.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}